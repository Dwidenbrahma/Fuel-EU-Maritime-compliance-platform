datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Route {
  id                     String   @id @default(uuid())
  ship_id                String?
  route_name             String?
  vessel_type            String?
  fuel_type              String?
  fuel_tons              Float?
  distance_nm            Float?
  year                   Int

  emissions_gco2eq       Float?    // computed from fuel
  energy_mj              Float?    // computed from fuel
  intensity_gco2_per_mj  Float?    // emissions / energy
  baseline_intensity     Float?    // nullable baseline reference

  created_at             DateTime @default(now())
}

model ShipCompliance {
  id         Int     @id @default(autoincrement())
  ship_id    String
  year       Int
  cb_gco2eq  Float
}

model BankEntry {
  id             String   @id @default(uuid())
  ship_id        String
  year           Int
  amount_gco2eq  Float
  applied        Boolean  @default(false)
  created_at     DateTime @default(now())
}


model Pool {
  id        String   @id @default(uuid())
  year      Int
  pooled_cb Float
  created_at DateTime @default(now())
  members   PoolMember[]
}

model PoolMember {
  id          String   @id @default(uuid())
  pool_id     String
  ship_id     String
  adjusted_cb Float
  Pool        Pool     @relation(fields: [pool_id], references: [id])

  @@index([ship_id])
}